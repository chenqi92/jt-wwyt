<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyc.wwyt.dao.TYhpcjlDao">
    <resultMap type="com.lyc.wwyt.entity.TYhpcjlEntity" id="TYhpcjlMap">
        <result property="id" column="id"/>
        <result property="checkTaskId" column="CHECK_TASK_ID"/>
        <result property="tyshxydm" column="TYSHXYDM"/>
        <result property="checkTime" column="CHECK_TIME"/>
        <result property="checkStatus" column="CHECK_STATUS"/>
        <result property="createByMobile" column="CREATE_BY_MOBILE"/>
        <result property="updateByMobile" column="UPDATE_BY_MOBILE"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="deleteMark" column="delete_mark"/>
        <result property="companyCode" column="COMPANY_CODE"/>
    </resultMap>

    <sql id="baseColumn">
        id,
        CHECK_TASK_ID,
        TYSHXYDM,
        CHECK_TIME,
        CHECK_STATUS,
        CREATE_BY_MOBILE,
        UPDATE_BY_MOBILE,
        create_time,
        create_by,
        update_time,
        update_by,
        delete_mark,
        COMPANY_CODE
    </sql>

    <select id="selectList" resultType="com.lyc.wwyt.vo.TYhpcjlVO">
        select
        id,
        CHECK_TASK_ID,
        TYSHXYDM,
        CHECK_TIME,
        CHECK_STATUS,
        CREATE_BY_MOBILE,
        UPDATE_BY_MOBILE,
        create_time,
        create_by,
        update_time,
        update_by,
        delete_mark,
        COMPANY_CODE
        from t_yhpcjl
        where delete_mark = 0
        <if test="tYhpcjlDTO != null and tYhpcjlDTO != ''">
            AND id = #{tYhpcjlDTO.id}
        </if>
    </select>
</mapper>
