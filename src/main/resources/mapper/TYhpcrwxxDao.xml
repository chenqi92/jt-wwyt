<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyc.wwyt.dao.TYhpcrwxxDao">
    <resultMap type="com.lyc.wwyt.entity.TYhpcrwxxEntity" id="TYhpcrwxxMap">
        <result property="id" column="id"/>
        <result property="riskMeasureId" column="RISK_MEASURE_ID"/>
        <result property="tyshxydm" column="TYSHXYDM"/>
        <result property="troubleshootContent" column="TROUBLESHOOT_CONTENT"/>
        <result property="checkCycle" column="CHECK_CYCLE"/>
        <result property="checkCycleUnit" column="CHECK_CYCLE_UNIT"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="deleteMark" column="delete_mark"/>
        <result property="companyCode" column="COMPANY_CODE"/>
    </resultMap>

    <sql id="baseColumn">
        id,
        RISK_MEASURE_ID,
        TYSHXYDM,
        TROUBLESHOOT_CONTENT,
        CHECK_CYCLE,
        CHECK_CYCLE_UNIT,
        create_time,
        create_by,
        update_time,
        update_by,
        delete_mark,
        COMPANY_CODE
    </sql>

    <select id="selectList" resultType="com.lyc.wwyt.vo.TYhpcrwxxVO">
        select
        id,
        RISK_MEASURE_ID,
        TYSHXYDM,
        TROUBLESHOOT_CONTENT,
        CHECK_CYCLE,
        CHECK_CYCLE_UNIT,
        create_time,
        create_by,
        update_time,
        update_by,
        delete_mark,
        COMPANY_CODE
        from t_yhpcrwxx
        where delete_mark = 0
        <if test="tYhpcrwxxDTO != null and tYhpcrwxxDTO != ''">
            AND id = #{tYhpcrwxxDTO.id}
        </if>
    </select>
</mapper>
