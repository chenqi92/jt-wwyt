    <sql id="baseColumn">
        id,
        TYSHXYDM,
        SSCBS,
        NAME,
        LEVEL,
        CONTENT,
        START_TIME,
        DUE_TIME,
        APPENDIX,
        NO,
        create_time,
        create_by,
        update_time,
        update_by,
        delete_mark
